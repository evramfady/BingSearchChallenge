<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Validate Search Suite" parallel="tests" thread-count="3">
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Tests.TC01_ValidateCountFirstSearchResultPage"/>
            <class name="Tests.TC02_ValidateCountSecondEqualsThirdSearchResultPage"/>
        </classes>
    </test>
    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="Tests.TC01_ValidateCountFirstSearchResultPage"/>
            <class name="Tests.TC02_ValidateCountSecondEqualsThirdSearchResultPage"/>
        </classes>
    </test>
    <test name="Edge Test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="Tests.TC01_ValidateCountFirstSearchResultPage"/>
            <class name="Tests.TC02_ValidateCountSecondEqualsThirdSearchResultPage"/>
        </classes>
    </test>
</suite>
